@model NewsEntities.Concrete.ModalNews

 <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    @if (Model != null)
                    {
                        foreach (var item in Model.News)
                        {
                            <h5>@item.Title</h5>
                            <p>@item.Subtitle</p>
                            <a asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id">Continue Reading</a>
                            <a asp-action="RemoveFromNewsModal" asp-controller="Home" class="btn btn-outline-info" asp-route-id="@item.Id">Delete</a>
                           
                            <hr />
                        }
                    }
                    else
                    {
                        <h4>Nothing to read</h4>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a asp-action="RemoveFromNewsModal" asp-controller="Home" class="btn btn-outline-danger">Delete All</a>
                </div>
            </div>
        </div>
    </div>

