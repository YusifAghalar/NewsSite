<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsSite</title>
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/bootstrap.min.css" />
    <script src="~/lib/js/bootstrap.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/css/all.css" />


</head>
<body>
   
    @(await Component.InvokeAsync("NewsModalComponent"))
   
    <div class="container">

        <div class=" nabvar navbar-light bg-light row">
            <div class="col-7">
                <form asp-action="search" class="form-inline">
                    <input class="form-control mr-sm-2" type="search" name="searchTerm" placeholder="Search" />
                    <button class="btn btn-outline-success my-2 my-sm-2" type="submit">Search</button>
                </form>
            </div>

            <div class="col-5 float-left">
                <partial name="_LoginPartial" />
            </div>
        </div>


    </div>
    @(await Component.InvokeAsync("MenuComponent"))



    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - NewsSite</p>
        </footer>
    </div>



    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>



    @RenderSection("Scripts", required: false)
</body>
</html>
