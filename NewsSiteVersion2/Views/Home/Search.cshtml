@model NewsSiteVersion2.Models.SearchViewModel

@{

}


<h2>News</h2>

@foreach (var item in Model.News)
{
<div class="card-body d-flex flex-column align-items-start">

    <h3 class="mb-0">
        <a class="text-dark" href="#">@item.Title</a>
    </h3>
    <div class="mb-1 text-muted">@item.CreatedOn.ToShortDateString()</div>
    <p class="card-text mb-auto">@String.Join(" ", item.Text.Split(' ', '.').Take(60))</p>
    <a asp-action="Detail" asp-route-id="@item.Id">Continue Reading</a>
    <a asp-action="AddToNewsModal" asp-controller="Home" asp-route-id="@item.Id">Add to list</a>
</div>
}

